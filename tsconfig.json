{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "scripthost", "es2018"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "ts-node",
    "dist",
    "./**/*.spec.ts"
  ]
}